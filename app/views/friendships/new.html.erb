<h1>List of Users</h1>

<table class="table">
        <thead class="thead thead-default">
            <tr>
                <th> Name</th>
                <th> Email </th>
                <th> Add </th>
            </tr>
        </thead>

        <tbody>
            <% User.all.each do |user| %>
            <tr>
                <td> <%= user.name %> </td>
                <td> <%= user.email %> </td>
               <td> 
               <%= link_to "Add user to friendlist", new_friend_path(friend_id: user.id) %>
               </td>
            </tr>
            <% end %>
        </tbody>