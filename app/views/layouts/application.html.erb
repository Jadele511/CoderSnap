<!DOCTYPE html>
<html>
<head>
  <title>CoderSnap</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class='container'>
	<nav class="navbar navbar-light bg-faded">
	  <a class="navbar-brand" href="<%= root_path %>">CoderSnap </a>
	 
        <% if current_user %>
          <%= button_to "Log Out", logout_path, method: :delete, class: 'btn btn-primary navbar-btn pull-xs-right' %>
        <% else %>
          <%= link_to "Log In", new_session_path, class: 'btn btn-primary navbar-btn pull-xs-right', method: :get %>
          <%= link_to "Sign Up", new_user_path, class: 'btn btn-success navbar-btn pull-xs-right', method: :get %>
        <% end %>
     </nav>
     </div>


		
<% if flash.any? %>
	<% flash.each do |key, value| %>
		<div class="alert <%= flash_class_name(key) %> ">
			<%= value %>
		</div>
	<% end %>
<% end %>
<div class="container">
	<%= yield %>
</div>
</body>
</html>
